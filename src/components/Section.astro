---
interface Props {
  title: string;
  id: string;
  className?: string;
}

const { title, id, className = "" } = Astro.props;
---

<section id={id} class={`py-16 ${className}`}>
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold mb-12 text-center">{title}</h2>
    <slot />
  </div>
</section>
